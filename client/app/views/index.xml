<Alloy>
	<Window>
		<View class="btn-block container">
			<Button class="home-link" title="Home" onClick="getHome"/>
			<Button class="products-link" title="Products" onClick="getProducts"/>
			<Button class="contact-link" title="Contact" onClick="getContact"/>
		</View>
		<ScrollableView id="scrollableView" class="container" layout="vertical">
			<Require src='home' id="home"/>
			<Require src='products' id="products"/>
			<Require src='contact' id="contact"/>
		</ScrollableView>
	</Window>
</Alloy>
